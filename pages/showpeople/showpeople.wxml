

<view class='crown_view'>
<image class="member-avatar" src="{{crown_url}}"></image>
</view>
<view class='usertext_view'>
  <text>{{POI_name}}签到王:{{king_user}}</text>
</view>

<block wx:for="{{users}}">
  <view>
    <view class="topic-item" catchtap="redictDetail">
      <image class="member-avatar" src="{{item.avatarUrl}}" background-size="cover"></image>
      <view class="topic-info">
        <view class="topic-inner">
          <view class="topic-left">
            <view class="topic-title"><text>{{item.text}}</text></view>
            <view>
              <text class="member-nickname">{{item.datetime}}</text>
            </view>
            <view>
              <text class="node-name">{{item.nickName}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</block>

<view>

<view style="display: flex;flex-direction:row">
  <view style="flex:0.2"></view>
  <view style="flex:0.6">
    <button bindtap="QRCode" style="flex:1" class="weui-btn" type="primary">生成二维码</button>
  </view>
  <view style="flex:0.2"></view>
</view>

<view class='qr_view' style="display:{{displayQrCode}}"> 
<image class='qr_image' src="{{qrcodeUrl}}"></image>  
</view>
</view>
